    agent any 
   
    stages {
	
          stage("Init") {
	steps {
                     echo "Initialization"
 	}
          }

          stage("Build") {
	steps {
                     echo "Building a project"
 	}
          }

          stage("Deploy") {
	steps {
                     echo "Deploying an application"
 	}
          }         
    }

}